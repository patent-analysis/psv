{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "DynamoDB resource stack creation using Amplify CLI",
    "Parameters": {
        "partitionKeyName": {
            "Type": "String"
        },
        "partitionKeyType": {
            "Type": "String"
        },
        "env": {
            "Type": "String"
        },
        "tableName": {
            "Type": "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "DynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "patentNumber",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "patentName",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "proteinId",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "claimedResidues",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "applicants",
                        "AttributeType": "SS"
                    },
                    {
                        "AttributeName": "patentAssignees",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "inventors",
                        "AttributeType": "SS"
                    },
                    {
                        "AttributeName": "examiners",
                        "AttributeType": "SS"
                    },
                    {
                        "AttributeName": "legalOpinion",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "legalStatus",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "appNumber",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "appDate",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "claimsCount",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "sequenceCount",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "patentFileDate",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "createdDate",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "relatedDocs",
                        "AttributeType": "SS"
                    },
                    {
                        "AttributeName": "patentDocPath",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "patentNumber",
                        "KeyType": "HASH"
                    }
                ],
                "GlobalSecondaryIndexes": [
                    {
                        "IndexName": "proteinId-index",
                        "KeySchema": [
                            {
                                "AttributeName": "proteinId",
                                "KeyType": "HASH"
                            }
                        ],
                        "Projection": {
                            "ProjectionType": "ALL"
                        },
                        "ProvisionedThroughput": {
                            "ReadCapacityUnits": 5,
                            "WriteCapacityUnits": 5
                        }
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "5",
                    "WriteCapacityUnits": "5"
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_IMAGE"
                },
                "TableName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        {
                            "Ref": "tableName"
                        },
                        {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "tableName"
                                    },
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                }
            }
        }
    },
    "Outputs": {
        "Name": {
            "Value": {
                "Ref": "DynamoDBTable"
            }
        },
        "Arn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "Arn"
                ]
            }
        },
        "StreamArn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "StreamArn"
                ]
            }
        },
        "PartitionKeyName": {
            "Value": {
                "Ref": "partitionKeyName"
            }
        },
        "PartitionKeyType": {
            "Value": {
                "Ref": "partitionKeyType"
            }
        },
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        }
    }
}